@model LondonUbf.Domain.ViewModels.MessageViewModel
@{
    string urlHost = "http://www.londonubf.org.uk";
    Layout = null;
    Response.ContentType = "text/xml";
}
<?xml version="1.0" encoding="UTF-8"?>
<urlset
      xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
      http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">


<url><loc>@urlHost@Url.Action("Index", "Home")</loc></url>
<url><loc>@urlHost@Url.Action("About", "Home")</loc></url>
<url><loc>@urlHost@Url.Action("Index", "Messages")</loc></url>

@foreach (var message in Model.Messages)
{
    <url><loc>@urlHost@Url.Action("Read", "Messages", new { id = Model.RenderUrlFrom(message.FileName) })</loc></url>
}

</urlset>